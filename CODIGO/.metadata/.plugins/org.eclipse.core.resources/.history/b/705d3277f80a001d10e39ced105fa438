package controle;

import java.util.ArrayList;
import java.util.List;

import modelo.Cliente;

public class ControleCliente {

	private List<Cliente> clientes = new ArrayList<Cliente>();

	
	// PESQUISAR SOMENTE 1 ITEM	
	public Cliente pesquisarCliente(Integer id) {
		return new Cliente();
	}
	
	public Integer ultimoCodigo() {
		
		Integer ultimoClienteAdicionado = (clientes.size() - 1);
		Cliente ultimoCodigo = clientes.get(ultimoClienteAdicionado);
		return ultimoCodigo.getId();
	}
}
